<UserControl x:Class="Flapy_bird.UCDemarage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Flapy_bird"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image Source="/Images/Ciel.png" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" Width="800"/>
        <Image Margin="0,0,0,-138" Source="/Images/Herbes.png" Stretch="Fill"/>
        <Image Margin="262,84,262,84" Source="/Images/FlappyBird.png" Stretch="Fill"/>
        <TextBox x:Name="Titre" TextWrapping="Wrap" Text="Speedy Wings " Width="512" TextChanged="TextBox_TextChanged" Background="{x:Null}" HorizontalAlignment="Center" VerticalAlignment="Top" SelectionOpacity="1" FontSize="75" Margin="0,12,0,0" BorderBrush="{x:Null}" Foreground="White"/>
        <Button x:Name="Jouer" Content="JOUER" Margin="281,383,281,0" Click="Button_Click" FontSize="50"/>
        <Image Margin="674,0,0,325" Source="/Images/Parametre.png" Stretch="Fill"/>
        <Button x:Name="btnParametre" Content="" Margin="674,10,0,336" Background="{x:Null}" Click="btnParametre_Click" BorderBrush="{x:Null}"/>

    </Grid>
</UserControl>
