<UserControl x:Class="SpeedyWings.UCDemarrage"

  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"

  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

Height="500" Width="900">

    <Grid>

        <Image Source="/Images/Ciel.png" Stretch="Fill" Margin="0,0,2,-123" />

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="SPEEDY WINGS" FontSize="60" FontWeight="Bold"

  Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,50">

                <TextBlock.Effect>

                    <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="3"/>

                </TextBlock.Effect>

            </TextBlock>

            <Button x:Name="BtnJouer" Content="JOUER" Height="50" Width="200" Margin="10" FontSize="20" Click="BtnJouer_Click"/>

            <Button x:Name="BtnRegles" Content="RÈGLES" Height="50" Width="200" Margin="10" FontSize="20" Click="BtnRegles_Click"/>

            <Button x:Name="BtnSkins" Content="SKINS" Height="50" Width="200" Margin="10" FontSize="20" Click="BtnSkins_Click"/>

            <Button x:Name="BtnQuitter" Content="QUITTER" Height="50" Width="200" Margin="10" FontSize="20" Click="BtnQuitter_Click"/>

        </StackPanel>

        <Image Margin="18,187,611,127" Source="/Images/FlappyBird.png" Stretch="Fill"/>

        <Image Margin="573,223,-50,114" Source="/Images/tuyau.png" Stretch="Fill"/>

        <StackPanel>

            <Button x:Name="btnMusique" Height="100" Width="500" Background="{x:Null}" BorderBrush="{x:Null}" Click="Button_Click">
                <Image x:Name="btnMusic" Source="/Images/175658.png" Height="108" Width="154" RenderTransformOrigin="0.749,0.5"/>
            </Button>


        </StackPanel>
    </Grid>

</UserControl>