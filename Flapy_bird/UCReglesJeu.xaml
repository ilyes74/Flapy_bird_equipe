<UserControl x:Class="SpeedyWings.UCReglesJeu"

  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"

  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

  Height="500" Width="900">

    <Grid >
        <Image Source="/Images/Ciel.png" Stretch="UniformToFill" Margin="0,0,2,-129"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="RÈGLES DU JEU" FontSize="40" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="20"/>

            <TextBlock Text="1. Appuie sur ESPACE ou flèche du haut pour voler." FontSize="20" Foreground="White" HorizontalAlignment="Center" Margin="5"/>

            <TextBlock Text="2. Évite les tuyaux verts." FontSize="20" Foreground="White" HorizontalAlignment="Center" Margin="5"/>

            <TextBlock Text="3. Ramasse les pièces !" FontSize="20" Foreground="White" HorizontalAlignment="Center" Margin="5"/>

            <Button Content="RETOUR" Width="150" Height="40" Margin="30" Click="BtnRetour_Click"/>

        </StackPanel>

    </Grid>

</UserControl>