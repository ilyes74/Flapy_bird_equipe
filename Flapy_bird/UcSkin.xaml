<UserControl x:Class="Flapy_bird.UCSkin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="450" Width="800">

    <Grid >
        <Image Source="/Images/Ciel.png" Stretch="UniformToFill" Margin="0,0,2,-129"/>
        <TextBlock Text="CHOISIS TON OISEAU" FontSize="40" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,50,0,0" Foreground="White"/>

        <Button x:Name="btnSkin1" Width="100" Height="100" Margin="-150,0,0,0" Click="BtnSkin1_Click">
            <Image Source="/Images/FlappyBird.png"/>
        </Button>

        <Button x:Name="btnSkin2" Width="100" Height="100" Margin="150,0,0,0" Click="BtnSkin2_Click">
            <Image Source="/Images/OiseauRouge.png"/>
        </Button>

        <Button Content="RETOUR MENU" Width="200" Height="50" VerticalAlignment="Bottom" Margin="0,0,0,50"
                FontSize="20" Click="BtnRetour_Click"/>
    </Grid>
</UserControl>