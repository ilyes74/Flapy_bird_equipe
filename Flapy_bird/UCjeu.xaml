<UserControl x:Class="Flapy_bird.UCjeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Flapy_bird"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             Focusable="True">
    
    <Canvas x:Name="MyCanvas" Background="#87CEEB">
        <Image x:Name="ciel" Source="/Images/Ciel.png" Stretch="Fill" 
               Width="800" Height="450" Canvas.Left="0" Canvas.Top="0"/>
        
        <Image x:Name="ciel2" Source="/Images/Ciel.png" Stretch="Fill" 
               Width="800" Height="450" Canvas.Left="800" Canvas.Top="0"/>

        <Image x:Name="imgbatiment" Source="/Images/Batiments.png" Stretch="UniformToFill" 
               Width="800" Height="200" Canvas.Left="0" Canvas.Top="200" Opacity="0.8"/>

        <Image x:Name="imgbatiment2" Source="/Images/Batiments.png" Stretch="UniformToFill" 
               Width="800" Height="200" Canvas.Left="800" Canvas.Top="200" Opacity="0.8"/>

        <Image x:Name="imgtuyau1" Source="/Images/tuyau.png" Stretch="Fill" 
               Width="72" Height="150" Canvas.Left="400" Canvas.Top="250" />

        <Image x:Name="imgtuyau2" Source="/Images/tuyau.png" Stretch="Fill" 
               Width="68" Height="150" Canvas.Left="400" Canvas.Top="0" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Image.RenderTransform>
                <RotateTransform Angle="180"/>
            </Image.RenderTransform>
        </Image>

        <Image x:Name="imgtuyau3" Source="/Images/tuyau.png" Stretch="Fill" 
               Width="70" Height="120" Canvas.Left="650" Canvas.Top="280" HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <Image x:Name="imgtuyau4" Source="/Images/tuyau.png" Stretch="Fill" 
               Width="76" Height="147" Canvas.Left="650" Canvas.Top="3" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Image.RenderTransform>
                <RotateTransform Angle="180"/>
            </Image.RenderTransform>
        </Image>

        <Image x:Name="imgpiece1" Source="/Images/piece_sans_fond.png" Stretch="Uniform" 
               Width="40" Height="40" Canvas.Left="525" Canvas.Top="180" />

        <Image x:Name="imgsol" Source="/Images/Sol.png" Stretch="Fill" 
               Width="800" Height="434" Canvas.Left="2" Canvas.Top="0" Panel.ZIndex="10"/>

        <Image x:Name="imgsol2" Source="/Images/Sol.png" Stretch="Fill" 
               Width="800" Height="449" Canvas.Left="800" Canvas.Top="1" Panel.ZIndex="10" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <Image x:Name="imgflapy" Source="/Images/FlappyBird.png" Stretch="Uniform" 
               Width="73" Height="52" Canvas.Left="50" Canvas.Top="188" Panel.ZIndex="20" HorizontalAlignment="Left" VerticalAlignment="Center" IsEnabled="False"/>

    </Canvas>
</UserControl>