<UserControl x:Class="Flapy_bird.UCjeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             Focusable="True"
             Loaded="UserControl_Loaded">

    <Canvas x:Name="MyCanvas" Background="#87CEEB">

        <Image x:Name="ciel" Source="/Images/Ciel.png" Stretch="Fill" 
               Width="800" Height="450" Canvas.Left="0" Canvas.Top="0"/>
        <Image x:Name="ciel2" Source="/Images/Ciel.png" Stretch="Fill" 
               Width="800" Height="450" Canvas.Left="800" Canvas.Top="0"/>

        <Image x:Name="imgbatiment" Source="/Images/Batiments.png" Stretch="UniformToFill" 
               Width="800" Height="200" Canvas.Left="0" Canvas.Top="200" Opacity="0.8"/>
        <Image x:Name="imgbatiment2" Source="/Images/Batiments.png" Stretch="UniformToFill" 
               Width="800" Height="200" Canvas.Left="800" Canvas.Top="200" Opacity="0.8"/>


        <Image x:Name="imgtuyau1" Source="/Images/tuyau.png" Stretch="Fill" Width="70" Height="193" Canvas.Left="350" Canvas.Top="250" HorizontalAlignment="Center" VerticalAlignment="Top" />
        <Image x:Name="imgtuyau2" Source="/Images/tuyau.png" Stretch="Fill" Width="70" Height="132" Canvas.Left="350" Canvas.Top="-20" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Image.RenderTransform>
                <RotateTransform Angle="180" CenterX="35" CenterY="75"/>
            </Image.RenderTransform>
        </Image>

        <Image x:Name="imgtuyau3" Source="/Images/tuyau.png" Stretch="Fill" Width="70" Height="162" Canvas.Left="600" Canvas.Top="280" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Image x:Name="imgtuyau4" Source="/Images/tuyau.png" Stretch="Fill" Width="70" Height="150" Canvas.Left="600" Canvas.Top="-10">
            <Image.RenderTransform>
                <RotateTransform Angle="180" CenterX="35" CenterY="75"/>
            </Image.RenderTransform>
        </Image>

        <Image x:Name="imgtuyau5" Source="/Images/tuyau.png" Stretch="Fill" Width="70" Height="166" Canvas.Left="850" Canvas.Top="270" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Image x:Name="imgtuyau6" Source="/Images/tuyau.png" Stretch="Fill" Width="70" Height="140" Canvas.Left="850" Canvas.Top="-10">
            <Image.RenderTransform>
                <RotateTransform Angle="180" CenterX="35" CenterY="70"/>
            </Image.RenderTransform>
        </Image>


        <Image x:Name="imgpiece1" Source="/Images/piece_sans_fond.png" Stretch="Uniform" 
               Width="40" Height="40" Canvas.Left="500" Canvas.Top="180" Panel.ZIndex="5"/>

        <Image x:Name="imgpiece2" Source="/Images/piece_sans_fond.png" Stretch="Uniform" 
               Width="40" Height="40" Canvas.Left="700" Canvas.Top="250" Panel.ZIndex="5"/>

        <Image x:Name="imgpiece3" Source="/Images/piece_sans_fond.png" Stretch="Uniform" 
               Width="40" Height="40" Canvas.Left="900" Canvas.Top="100" Panel.ZIndex="5"/>

        <Image x:Name="imgpiece4" Source="/Images/piece_sans_fond.png" Stretch="Uniform" 
               Width="40" Height="40" Canvas.Left="1100" Canvas.Top="200" Panel.ZIndex="5"/>

        <TextBlock x:Name="txtScore" Text="Score: 0" FontSize="30" FontWeight="Bold" 
                   Foreground="White" Canvas.Left="10" Canvas.Top="10" Panel.ZIndex="100"/>

        <Image x:Name="imgsol" Source="/Images/Sol.png" Stretch="Fill" 
               Width="800" Height="70" Canvas.Left="0" Canvas.Top="380" Panel.ZIndex="20"/>
        <Image x:Name="imgsol2" Source="/Images/Sol.png" Stretch="Fill" 
               Width="800" Height="70" Canvas.Left="800" Canvas.Top="380" Panel.ZIndex="20"/>

        <Image x:Name="imgflapy" Source="/Images/FlappyBird.png" Stretch="Uniform" 
               Width="50" Height="40" Canvas.Left="50" Canvas.Top="200" Panel.ZIndex="30"/>

    </Canvas>
</UserControl>